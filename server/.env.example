# Server Configuration
SERVER_ADDR=:8080
ENV=development
LOG_LEVEL=info

# Database Configuration
PG_DSN=postgres://postgres:password@localhost:5432/dali_toolkit?sslmode=disable
REDIS_ADDR=localhost:6379

# Casdoor Configuration
CASDOOR_SERVER_URL=https://door.casdoor.com
CASDOOR_CLIENT_ID=your_client_id
CASDOOR_CLIENT_SECRET=your_client_secret
CASDOOR_ORG=your_organization
CASDOOR_APP=your_app_name
CASDOOR_SUPER_ORG=built-in

# MQTT Configuration
MQTT_LISTEN_ADDR=:1883
MQTT_DEVICE_USERNAME=device

# App/Web Configuration
APP_EMBED_ENABLED=true
APP_STATIC_PATH=./app

# WebSocket Configuration
WS_ENABLE=true
WS_PATH=/ws
WS_MAX_CONN_PER_USER=4